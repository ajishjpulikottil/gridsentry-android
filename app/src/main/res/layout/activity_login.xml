<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.graffiti.mahesh.gridsentrylocation.login.LoginActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="600dp">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_topicon" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/ilEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivLogo"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp">

                <EditText
                    android:id="@+id/edit_userEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:drawablePadding="20dp"
                    android:drawableLeft="@drawable/ic_avatar"
                    android:drawableTint="@color/colorAccent"
                    android:fontFamily="Open-Sans-condensed"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="13sp" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/ilPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ilEmail"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/edit_userPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:drawablePadding="20dp"
                    android:drawableLeft="@drawable/ic_lock"
                    android:drawableTint="@color/colorAccent"
                    android:fontFamily="Open-Sans-condensed"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="13sp" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnLogin"
                android:layout_alignLeft="@+id/ilPassword"
                android:layout_alignStart="@+id/ilPassword"
                android:layout_below="@+id/ilPassword"
                android:layout_marginLeft="60dp"
                android:layout_marginStart="60dp"
                android:padding="5dp"
                android:layout_marginTop="34dp"
                android:textColor="#ffffff"
                android:background="@drawable/log_in_curved"
                android:text="Log in" />

            <TextView
                android:id="@+id/textForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/btnLogin"
                android:layout_alignStart="@+id/btnLogin"
                android:layout_below="@+id/btnLogin"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="27dp"
                android:layout_marginStart="27dp"
                android:text="Forgot Password"
                android:textColor="#202020" />
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
